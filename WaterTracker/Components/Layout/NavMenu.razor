@inject HttpClient Http
@inject NavigationManager NavigationManager
@rendermode InteractiveServer


<div class="navbar" hidden="@hidden">
    <div class="top-row ps-3 navbar navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="">WaterTracker</a>
        </div>
    </div>

    <input type="checkbox" title="Navigation menu" class="navbar-toggler"/>

    <div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="counter">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Counter
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="weather">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Weather
                </NavLink>
            </div>
            <div class="nav-item px-4">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code
{
    private string url = string.Empty;
    private bool hidden { get; set; } = false;

    private void HideNavBarCheck()
    {
        if (url.Equals(NavigationManager.BaseUri) || url.Equals(NavigationManager.BaseUri + "login") || url.Equals(NavigationManager.BaseUri + "register"))
        {
            hidden = true;
        }
        else
        {
            hidden = false;
        }
    }

    
    protected override void OnInitialized()
    {
        url = NavigationManager.Uri;
        HideNavBarCheck();
    }
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            url = NavigationManager.BaseUri;
            HideNavBarCheck();
        }
    }
}